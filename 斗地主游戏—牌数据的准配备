public class TestDamo {
    //1:å®šä¹‰ä¸€ä¸ªé™æ€çš„é›†åˆæ¥ å­˜æ”¾ç‰Œç±»
    public static List<Card> allCards=new ArrayList<>();
    //2:å®šä¹‰é™æ€ä»£ç å—åŠ è½½ç‰Œçš„æ•°æ®
    static{
        String [] colo1=new String []{"3","4","5","6","7","8","9","10","J","O","K","A","2"};
        String [] colo2=new String []{"â™¥","â™ ","â™£","â™¦"};
        int Index=0;
        for(String size:colo1){
            Index++;
            for (String color:colo2) {
                allCards.add(new Card(size,color,Index));
            }
        }
        Card c1=new Card("","ğŸƒ",++Index);
        Card c2=new Card("","ğŸ…",++Index);
        Collections.addAll(allCards,c1,c2);
        System.out.println("æ–°ç‰Œï¼š"+allCards);
    }
    public static void main(String[] args){
        //3:æ´—ç‰Œ
        Collections.shuffle(allCards);
        System.out.println("æ´—ç‰Œå"+allCards);

        //4:å®šä¹‰ä¸‰ä¸ªç©å®¶ ä¸‰ä¸ªé›†åˆå®¹å™¨
        List<Card> A=new ArrayList<>();
        List<Card> B=new ArrayList<>();
        List<Card> C=new ArrayList<>();

        //5:å¼€å§‹å‘ç‰Œï¼Œç•™ä¸‰å¼ åšåº•ç‰Œï¼Œ
        for(int i=0;i<allCards.size()-3;i++){
            Card c=allCards.get(i);
            //ä½¿ç”¨è½®å¾ªç®—æ³• %3
            int num1=i%3;
            if(num1==0){
                //ç»™Aå‘ç‰Œ
                A.add(c);
            }else if(num1==1){
                //ç»™Bå‘ç‰Œ
                B.add(c);
            }else if(num1==2){
                //ç»™Cå‘ç‰Œ
                C.add(c);
            }
        }
        //6:å°†æœ€åä¸‰å¼ ç‰Œæˆªå–æˆä¸€ä¸ªå­é›†åˆï¼›
        List<Card> ListThreeCard=allCards.subList(allCards.size()-3,allCards.size());
        //7:ç»™ç©å®¶çš„ç‰Œä»å¤§åˆ°å°æ’åº
        sortCards(A);
        sortCards(B);
        sortCards(C);
        //8:çœ‹ç‰Œ
        List<List> all=new ArrayList<>();
        String[]str={"Açš„ç‰Œæ˜¯","Bçš„ç‰Œæ˜¯","Cçš„ç‰Œæ˜¯","æœ€åä¸‰å¼ ç‰Œæ˜¯"};
        Collections.addAll(all,A,B,C,ListThreeCard);//é›†åˆè£…é›†åˆ
        for (int i = 0; i <all.size() ; i++) {
            System.out.println(str[i]+all.get(i));
        }
    }

    /***
     * è¿™æ˜¯å¯¹ç‰Œç»è¡Œä»å¤§åˆ°å°æ’åºçš„æ–¹æ³•
     * @param cards è¿™æ˜¯è¢«æ’åºçš„ç‰Œç»„å¯¹è±¡
     */
    public static void sortCards(List<Card>cards){
        Collections.sort(cards, (o1,o2)-> {return o2.getIndex()- o1.getIndex();});
    }
}

public class Card {
    private String size;
    private String color;
    private int Index;//ä½œä¸ºçœŸæ­£æ¯”è¾ƒå¤§å°çš„çš„å±æ€§

    public Card() {
    }

    public Card(String size, String color,int Index) {
        this.size = size;
        this.color = color;
        this.Index=Index;
    }

    public int getIndex() {
        return Index;
    }

    public void setIndex(int index) {
        Index = index;
    }

    public String getSize() {
        return size;
    }

    public void setSize(String size) {
        this.size = size;
    }

    public String getColor() {
        return color;
    }

    public void setColor(String color) {
        this.color = color;
    }

    @Override
    public String toString() {
        return color+size;
    }
}
